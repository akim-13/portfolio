<UserControl x:Class="PI_Systems.GUIs.HelperUserControls.TitleAndBack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Margin="0,15,0,0" Content="{Binding Title}" Foreground="FloralWhite" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" FontFamily="consolas"/>
        <Button BorderThickness="0" Style="{StaticResource Button}" Margin="10,10,0,0" Width="80" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Content="BACK" FontSize="18" FontWeight="Bold" Background="DarkSlateGray" Foreground ="Wheat"  Click="ToMenuButton_Click"/>
    </Grid>
</UserControl>
