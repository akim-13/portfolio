<Window x:Class="PI_Systems.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PI_Systems"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">

    <Grid>
        <StackPanel VerticalAlignment="Center" Name="mainStackPanel" Margin="0,0,0,0">
            <Button 
                FontSize="20"
                FontFamily="Arial Black"
                Content="Click for test" 
                HorizontalAlignment="Center" 
                Click="TestButton_Click" Height="69" Width="204"/>

            <TextBlock
                Padding="0,20,0,20"
                TextWrapping="WrapWithOverflow"
                Visibility="Collapsed"
                FontSize="15"
                Name="testText"
                Text="Hello! The test button is working. Please click button again to collapse this text."
                HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
