<UserControl x:Class="PI_Systems.GUIs.UserControls.WorkItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PI_Systems.GUIs.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Background="DarkSlateGray">
            <Label Content="{Binding Title}" Foreground="Wheat" FontFamily="Cascadia Code" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10,0,0,0"  />
            <Label Content="{Binding Timer}" Name="timer" Foreground="Wheat" FontFamily="Cascadia Code" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,10,0" />
            <Button x:Name="controls_btn" Background="Wheat" Foreground="DarkSlateGray" HorizontalAlignment="Right" Width="30" Height="30" FontFamily="Cascadia Code" FontSize="22" Margin="0,5,10,5" Click="controls_btn_Click" />
        </StackPanel>
    </Grid>
</UserControl>
