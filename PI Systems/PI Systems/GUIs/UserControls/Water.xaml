<UserControl x:Class="PI_Systems.GUIs.UserControls.Water"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:huc="clr-namespace:PI_Systems.GUIs.HelperUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <huc:TitleAndBack Title="Water 💧"/>
        
        <!--Main Stack Panel-->
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">

            <huc:ActivityDayInput Prompt="Insert litres of water drank here" Activity="Water"/>

            <StackPanel Orientation="Horizontal">
                <Label 
             Width="300" 
             Height="50" 
             Content="Goal amount of water for" 
             HorizontalContentAlignment="Center" 
             VerticalContentAlignment="Center" 
             VerticalAlignment="Center" 
             FontFamily="Cascadia Code" 
             FontSize="16" Foreground="Wheat" 
             Background="DarkSlateGray"/>

                <TextBox
             Width ="100" 
             Height="50" 
             VerticalAlignment="Bottom" 
             Background="Wheat" 
             HorizontalContentAlignment="Center" 
             VerticalContentAlignment="Center" 
             FontFamily="Cascadia Code" 
             FontSize="15"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
