<UserControl x:Class="PI_Systems.GUIs.UserControls.Water"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:huc="clr-namespace:PI_Systems.GUIs.HelperUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <huc:TitleAndBack Title="Water 💧"/>
        
        <!--Main Stack Panel-->
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">

            <huc:ActivityDayInput Prompt="Insert litres of water drank here" Activity="Water"/>
            <huc:GoalInput Prompt="Insert litres of water for goal period:" Activity="Water"/>
        </StackPanel>
    </Grid>
</UserControl>
