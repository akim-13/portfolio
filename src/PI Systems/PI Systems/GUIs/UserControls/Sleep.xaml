<UserControl x:Class="PI_Systems.GUIs.UserControls.Sleep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:huc="clr-namespace:PI_Systems.GUIs.HelperUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <huc:TitleAndBack Title="Sleep 💤"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <huc:ActivityDayInput Prompt="Insert hours of sleep today" Activity="Sleep"/>
            <huc:GoalInput Prompt="Insert hours of sleep for goal period:" Activity="Sleep"/>
        </StackPanel>
    </Grid>

</UserControl>
